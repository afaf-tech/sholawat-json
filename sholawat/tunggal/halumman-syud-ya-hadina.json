{
    "source": "terjemahkitab.com",
    "name": "هَلُمَّا انْشُدْ يَا حَادِيْنَا",
    "latin": "Halumman Syud Ya Hadina",
    "text": {
        "1": {
            "arabic": "هَلُمَّا انْشُدْ يَا حَادِيْنَا",
            "latin": "Halumman syud ya hadina"
        },
        "2": {
            "arabic": "بِمَنْ أَهْوَاهُ غَنِّيْنَا",
            "latin": "B iman ahwahu ghonnina"
        },
        "3": {
            "arabic": "بِمَنْ أَهْوَاهُ يَا حَادِيْ",
            "latin": "B iman ahwahu ya hadi"
        },
        "4": {
            "arabic": "أَعِدْ مَدْحَكْ بِإِنْشَادِيْ",
            "latin": "A'id madhak bi insyadi"
        },
        "5": {
            "arabic": "وَلَوْلَا جِيْرَةَ الْوَادِيْ",
            "latin": "Walaula jirotal wadi"
        },
        "6": {
            "arabic": "لَمَا رُحْنَا وَلَا جِيْنَا",
            "latin": "Lama ruhna wala jina"
        },
        "7": {
            "arabic": "وَلَوْلَاهُمْ لَمَا سِرْنَا",
            "latin": "Walaulahum lama sirna"
        },
        "8": {
            "arabic": "لِطَيْبَةْ بِرُوْحِنَا طِرْنَا",
            "latin": "Litibah biruhina tirna"
        },
        "9": {
            "arabic": "مَا أَسْعَدْ مَا إِذَا طِرْنَا",
            "latin": "Ma as'ad idza ma tirna"
        },
        "10": {
            "arabic": "بِحْمَاهُم مَعْ مُحِبّينا",
            "latin": "Bihmahum ma' muhibbina"
        },
        "11": {
            "arabic": "سَرَيْنَا وَالرَّاكِبْ سَائِرْ",
            "latin": "Saraoina war rokib sair"
        },
        "12": {
            "arabic": "لِطَيْبَةْ وَالشَّجِيْ حَائِرْ",
            "latin": "Li tibah wasyaji hair"
        },
        "13": {
            "arabic": "شَمِمْنَا رِيحَهَا العَاطِر",
            "latin": "Syamimna rihahal atir"
        },
        "14": {
            "arabic": "بِرَوضَة جَنَّةْ وَاجْنَيْنَا",
            "latin": "Bi roudloh jannah waj niana"
        },
        "15": {
            "arabic": "دَخِيْلٌ يَا اَبَا الزَّهْرَا",
            "latin": "Dakhilun ya abaz zahro"
        },
        "16": {
            "arabic": "فَأَنْتَ بِحَالنَا اَدْرَى",
            "latin": "Fa anta bihalina adro"
        },
        "17": {
            "arabic": "بِحَقِّ الآلِ وَالعَشْرَة",
            "latin": "Bihaqqil ali wal asyroh"
        },
        "18": {
            "arabic": "تَشَفَّع فِينَا وَاحْمِينَا",
            "latin": "Taysaffa' fina wahmina"
        }
    },
    "last_updated": "2025-11-21"
}
